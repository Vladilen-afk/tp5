{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
<h1 class="text-center pt-2">fiche contact</h1>
<div class="row">
        <div class="card mb-3 container" >
                <h3 class="card-header">{{leContact.nom}} {{leContact.prenom}}</h3>
                <div class="row">
                    <div class="col-2 d-flex align-items-center">
                        <img class = "avatar mx-auto my-3" style = "height = auto; max-width: 200px; display : block;"  src=" {{ leContact.avatar }} " alt="card image">
                    </div>
                    <div class="col">
                        <ul class="list-group list-group-flush">
                        <li class="list-group-item"> {{leContact.rue}} </li>
                        <li class="list-group-item">{{leContact.cp}}</li>
                        <li class="list-group-item">{{leContact.ville}}</li>
                        <li style="list-group-item">{{leContact.mail}}</li>
                        <li class="list-group-item">
                            {% if leContact.sexe==0 %}
                                <span class="badge badge-info"> homme </span>
                            {% else %}
                                <span class="badge badge-info"> femme </span>
                            {% endif %}
                        </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                </div>
        </div>
        <a href="{{path('app_contact')}}" class="btn btn-info btn-block text-center">revenir a la liste</a>
</div>
{% endblock %}
