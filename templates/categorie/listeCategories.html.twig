{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Listes des categories</h1>
<div class="row">
{%for laCategorie in lesCategories %}
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3 mx-auto">
        <div class="card mb-3" >
                <h3 class="card-header">{{laCategorie.libelle}}</h3>
                <img class = "avatar mx-auto my-3" style = "height = auto; max-width: 200px; display : block;"  src=" {{asset(laCategorie.image)}} " alt="card image">
                <ul class="list-group list-group-flush">
                <li class="list-group-item"> {{laCategorie.description}} </li>
                </ul>
                <div class="card-body">
                    <a href="{{path("fiche_categorie",{'id': laCategorie.id})}}" class="btn btn-info btn-block text-center">Detail</a>
                </div>
                <h5 class="card-header"><span class="badge badge-primary">{{laCategorie.contacts|length}} contacts</span></h5>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
